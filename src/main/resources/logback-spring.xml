<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds" debug="false">

    <timestamp key="bySecond" datePattern="yyyyMMdd'T'HHmmss" scope="CONTEXT"/>

    <!-- org/springframework/boot/logging/logback/console-appender.xml -->
    <property name="CONSOLE_LOG_PATTERN" value="%d{HH:mm:ss.SSS} %-5p [%c] %m%n"/>

    <!-- org/springframework/boot/logging/logback/file-appender.xml -->
    <property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%c] %m%n"/>
    <property name="LOG_FILE" value="logs/ijleex-boot.log/"/>
    <property name="LOG_FILE_MAX_SIZE" value="10MB"/>
    <property name="LOG_FILE_MAX_HISTORY" value="10"/>
    <property name="LOG_TOTAL_SIZE_CAP" value="3GB"/>

    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- 开发、测试环境 -->
    <springProfile name="default,dev,test">
        <logger name="org.apache.ibatis" level="DEBUG"/>
        <logger name="org.mybatis" level="DEBUG"/>
        <logger name="org.springframework" level="DEBUG"/>
        <logger name="me.ijleex" level="DEBUG"/>
    </springProfile>

    <!-- 生产环境 -->
    <springProfile name="prod">
        <logger name="org.apache.ibatis" level="ERROR"/>
        <logger name="org.mybatis" level="ERROR"/>
        <logger name="org.springframework" level="ERROR"/>
        <logger name="me.ijleex" level="DEBUG"/>
    </springProfile>

    <logger name="sun.rmi.transport.tcp" level="ERROR"/>
    <logger name="sun.rmi.loader" level="ERROR"/>
    <logger name="sun.rmi.server.call" level="ERROR"/>

</configuration>
